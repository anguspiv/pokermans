{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@db/*": ["src/db/*"],
      "@graphql/*": ["src/graphql/*"],
      "@utils/*": ["src/utils/*"],
      "@schema/*": ["schema/*"],
      "@errors/*": ["src/errors/*"],
    },
    "typeRoots": [
      "node_modules/@types",
      "./types"
    ],
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom",
    ],
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
  "exclude": ["node_modules"],
  "ts-node": {}
}
